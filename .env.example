# WASTE IQ â€“ Environment Variables
# Copy this to .env and fill in your values

# Firebase Service Account (path to downloaded JSON key)
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase_service_account.json

# Firebase Web App Config (for frontend pyrebase4)
FIREBASE_API_KEY=your-api-key
FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_STORAGE_BUCKET=your-project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# Backend URL (Streamlit calls this)
BACKEND_URL=http://localhost:8000

# OpenRouteService API Key (free tier: https://openrouteservice.org)
ORS_API_KEY=your-ors-api-key

# JWT Secret (used for internal token signing, NOT Firebase)
JWT_SECRET=change-this-to-a-long-random-string

# Environment
ENVIRONMENT=development
